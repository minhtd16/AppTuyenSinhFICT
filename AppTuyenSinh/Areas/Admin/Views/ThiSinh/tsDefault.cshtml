            <th>Tệp học bạ</th>
            <th>Tệp CCCD</th>
            <th>Tệp bằng TN</th>
            <th>Ngày nộp.</th>
            <th>Trạng thái</th>
            <th>Chi tiết</th>
        </tr>
    </thead>
    <tbody class="tbody">
    </tbody>
</table>

